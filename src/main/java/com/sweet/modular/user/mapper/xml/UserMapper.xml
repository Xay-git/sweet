<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sweet.modular.user.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.sweet.modular.user.entity.User">
        <id column="ID" property="id" />
        <result column="USER_NAME" property="userName" />
        <result column="PASSWORD" property="password" />
        <result column="BIRTHDAY" property="birthday" />
        <result column="ACCOUNT_STATUS" property="accountStatus" />
        <result column="DEPT_ID" property="deptId" />
        <result column="CREATE_TIME" property="createTime" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        ID, USER_NAME, PASSWORD, BIRTHDAY, ACCOUNT_STATUS ,DEPT_ID,CREATE_TIME
    </sql>

    <select id="findByUserName" resultMap="BaseResultMap">
        select * from t_user where user_name = #{userName}
    </select>

    <select id="customPageList" resultType="com.sweet.modular.user.model.UserDto" parameterType="com.sweet.modular.user.entity.User">
        select
        u.id,u.user_name,u.birthday,u.dept_id,u.account_status,d.dept_name
        from t_user as u left join t_dept as d on u.dept_id = d.dept_id where 1 = 1
        <if test="param.deptId != null and param.deptId != ''">
            and  u.dept_id = #{param.deptId}
            or u.dept_id in
            (select dept_id from t_dept where
             parent_ids like concat('%',#{param.deptId} , '%'))
        </if>
        order by u.create_time asc
    </select>

</mapper>
