<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.sweet.modular.article.mapper.ArticleMapper">    <!-- 通用查询映射结果 -->    <resultMap id="BaseResultMap" type="com.sweet.modular.article.entity.Article">        <id column="ARTICLE_ID" property="articleId" />        <result column="ARTICLE_NAME" property="articleName" />        <result column="SNIPPET" property="snippet" />        <result column="ARTICLE_TYPE" property="articleType" />        <result column="AUTHOR" property="author" />        <result column="CONTENT" property="content" />        <result column="CREATE_TIME" property="createTime" />        <result column="MODIFY_TIME" property="modifyTime" />        <result column="VERSION" property="version" />    </resultMap>    <!-- 通用查询结果列 -->    <sql id="Base_Column_List">        ARTICLE_ID, ARTICLE_NAME, SNIPPET, ARTICLE_TYPE, AUTHOR, CREATE_TIME, MODIFY_TIME, VERSION    </sql>    <sql id="Blog_Column_List">        a.article_id,a.article_name, a.snippet, a.article_type, a.author, a.create_time, a.modify_time, a.version    </sql>    <select id="customPageList" resultType="com.sweet.modular.article.entity.Article"            parameterType="com.sweet.modular.article.entity.Article">        select        <include refid="Blog_Column_List"/>,b.real_name authorName        from business_article a left join t_user b on a.author = b.user_id       <if test="param.articleName != null and param.articleName != ''">        and a.article_name like concat('%',#{param.articlename},'%')       </if>       <if test="param.snippet != null and param.snippet != ''">        and a.snippet like concat('%',#{param.snippet},'%')       </if>       order by a.create_time desc    </select></mapper>